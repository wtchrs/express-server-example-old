<h2>
  Vacation Photo Contest
</h2>

<div id='vacationPhotoContestFormContainer'>
  <form
    class='form-horizontal'
    role='form'
    enctype='multipart/form-data'
    id='vacationPhotoContestForm'
  >
    <input type='hidden' name='csrf' value='{{csrf}}' />
    <div class='form-group'>
      <label class='col-sm-2 control-label' for='fieldName'>
        Name
      </label>
      <div class='col-sm-4'>
        <input id='fieldName' class='form-control' type='text' name='name' />
      </div>
    </div>
    <div class='form-group'>
      <label class='col-sm-2 control-label' for='fieldEmail'>
        Email
      </label>
      <div class='col-sm-4'>
        <input
          id='fieldEmail'
          class='form-control'
          type='email'
          name='email'
          required
        />
      </div>
    </div>
    <div class='form-group'>
      <label class='col-sm-2 control-label' for='fieldPhoto'>
        Vacation photo
      </label>
      <div class='col-sm-4'>
        <input
          id='fieldPhoto'
          class='form-control'
          type='file'
          accept='image/*'
          name='photo'
          required
        />
      </div>
    </div>
    <div class='form-group'>
      <div class='col-sm-offset-2 col-sm-4'>
        <button class='btn btn-primary' type='submit'>
          Register
        </button>
      </div>
    </div>
  </form>
</div>

<script>
  const url = '/api/vacation-photo-ajax/{{year}}/{{month}}'
</script>
<script src='/js/vacation-photo-contest.js'></script>
